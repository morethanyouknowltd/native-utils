{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".",
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": ["src/node/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
